<div class="content new_level clearfix">
  <div class="content_title">Campusmack Sign in</div>
  <div style="padding: 1em;margin-top:1em">
    <section id="services_signin" class="services">
      <p>Sign in with your Campusmack account -- OR -- use an alternate authentication service:</p>

      <%= form_for(resource, :as => resource_name, :url => new_session_path(resource_name)) do |f| %>
          <%= render 'shared/error_messages', :object => f.object %>
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email %>
          </div>
          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password %>
          </div>

          <% if devise_mapping.rememberable? -%>
              <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
          <% end -%>

          <%= f.submit "Sign in" %>
      <% end %>
      <br>

      <p> New user? <%= link_to "Sign up now!", sign_up_path %></p>

      <%= render :partial => "users/shared/links" %>
      <%= render :partial => "users/shared/services_list" %>
    </section>
  </div>
</div>