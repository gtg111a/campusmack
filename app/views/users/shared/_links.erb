<div class="links clearfix">
  <div class="l_column">
    <%- if controller_name != 'sessions' %>
      <%= link_to "Sign in", new_session_path(resource_name), :class => "sign_in" %>
      <% @caption = "Sign in" %>
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "forgot_pass" %>
      <% @caption = "Send" %>
    <% end -%>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class => "confirmation" %>
      <% @caption = "Resend" %>
    <% end -%>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), :class => "unlock" %>
      <% @caption = "Unlock" %>
    <% end -%>
  </div>
  <div class="r_column blue_button">
    <%= f.submit @caption %>
  </div>
</div>
