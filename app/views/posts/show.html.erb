<div class="content new_level with_submenu clearfix">
  <div class="content_actions">
    <ul>
    <% if can? :update, @post %>
      <li>
        <%= link_to 'Edit', method("edit_#{@post.postable_type.downcase}_#{@post.type.downcase}_path").call(@parent, @post), :class => 'button' %>
      </li>
    <% end %>
    <% if can? :destroy, @post %>
      <li>
        <%= link_to 'Delete', @post, :method => :delete, :confirm => "Delete Post?", :class => 'button' %>
      </li>
    <% end %>
    <% if can? :report, @post %>
      <li>
        <%= link_to('Report Abuse', report_post_path(@post), :class => 'button postreport', :id => "post_rep_#{@post.id}") %>
      </li>
    <% end %>
    </ul>
  </div>
<div class="content_title"><%= @post.title %></div>
<div class="content_container">
  <div class="content_category">
<div class="post">
  <div class="top">
    posted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.try(:username) %>.
    <%= vote_buttons(@post, :small) %>
    <br class="clear"/>
  </div>
  <% if @post.photo %>
    <div class="photo">
      <img src="<%= @post.photo.url(:large) %>" alt=""/>
    </div>
  <% end %>
  <% if @post.news_post %>
    <%= link_to "News post", @post.news_post.url %>
    <% unless @post.news_post.image_file_name.blank? %>
      <div class="photo">
        <img src="<%= @post.news_post.image_url(:large) %>" alt=""/>
      </div>
    <% end %>
    <% unless @post.news_post.video_url.blank? %>
      <div><%= youtube_embed(@post.news_post.video_url, true) %></div>
    <% end %>
  <% end %>
  <% if @post.video %>
    <div><%= youtube_embed(@post.video.url, true) %></div>
  <% end %>
  <div class="summary"><%= @post.summary %>
    <% if @post.summary && params[:action] != 'show' %>
      <%= link_to " [more...]", [@parent, @post] %>
    <% end %>
  </div>
  <br class="clear"/>
  <% if signed_in? %>
    <%= form_for [@post, Comment.new], :remote => true do |f| %>
      <%= render '/shared/comments', :f => f %>
        <div>
          <%= f.submit "Submit Comment" %>
        </div>
    <% end %>
  <% end %>
  <% if @post.comments.any? %>
    <h2>Comments:</h2>
    <%= will_paginate(@comments) %>
  <% end %>
  <div class="comments">
    <%= render :partial => @post.comments %>
  </div>
</div>
<%= render 'shared/report_form' %>
</div>
</div>
</div>