<h1><%= @post.title %></h1>

<ul class="posts">
  <%= render :partial => "/posts/post", :object => @post %>
</ul>
<% if signed_in? %>
    <%= form_for [@post, Comment.new], :remote => true do |f| %>
        <%= render '/shared/comments', :f => f %>
        <div class="actions">
          <%= f.submit "Submit Comment" %>
        </div>
    <% end %>
<% end %>
<h2>Comments:</h2>
<%= will_paginate(@comments) %>
<table class="comments">
  <tbody>
  <%= render :partial => @post.comments %>
  </tbody>
</table>


