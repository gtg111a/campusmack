<%= render 'shared/masthead1' %>
<h1><%= @college.name %> <%= @post.type %></h1>
<table class="masthead">
<tr>
	<td>
		Videos | Photos | News | Stats
	</td>
</tr>
</table>
  <table class="post" summary="User microposts">
	<%= render :partial => "/posts/post", :object => @post %>
	</table>
	<% if signed_in? %>
  <%= form_for [@post, Comment.new], :remote => true do |f| %> 
  <%= render '/shared/comments', :f => f %>
<div class="actions">
  <%= f.submit "Submit Comment" %>
</div>
  <% end %>
  <% end %>
<h2>Comments:</h2>
	<%= will_paginate(@comments)%>
	<table class = "comments">
		<tbody>
			<%= render :partial => @post.comments %>
		</tbody>
	</table>


