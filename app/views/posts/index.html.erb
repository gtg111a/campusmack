<%= render :partial => 'colleges/masthead' %>
<br class="clear"/>
<%= form_for @search, :url => posts_path, :html => {:method => :get} do |f| %>
    <%= f.label :search %>
    <%= f.text_field :title_or_post_summary_contains %>
    <%= f.submit "Go!", :name =>nil %>
<% end %>
<% unless @posts.empty? %>
<ul class="posts">
  <%= render :partial => "/posts/post", :collection => @posts %>
</ul>
<%= will_paginate(@posts) %>
<% end %>
