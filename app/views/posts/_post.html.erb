<ul>
	<td class ="post", id = "title"><%= link_to post.title, "/colleges/#{post.college_id}/posts/#{post.id}" %> 
	</td>
	<tr>
		<td>
			<% unless post.photo_file_name.nil? %>
			<span class = "photo"><%= image_tag post.photo.url(:medium), %></span>
			<% end %>
			<span class="content"><%= youtube_embed(post.content).html_safe %></span>
			<br>	
				<span class="timestamp">
					posted <%= time_ago_in_words(post.created_at) %> ago.
					</span>
		</td>	
		<td class = "comments">
			<span class="comments"><%= post.post_summary %>
			<% if !post.post_summary.nil? && !request.fullpath.include?("posts") %>
				<%= link_to " [more...]", "/colleges/#{post.college_id}/posts/#{post.id}" %>
			<% end %></span>
		</td>
		<td class = "vote" width = 10%>
			<% if signed_in? %>
			<span class = "vote"><%= link_to image_tag('arrow-up.png'), vote_up_post_path(post), :method => :post %></span><br>		
			<span class = "vote"><b><%= post.votes_for %><b> </span><br>
			<span class = "vote"><%= link_to image_tag('arrow-down.png'), vote_down_post_path(post), :method => :post %></span>
			<% else %>
			<span class = "vote"><b><%= post.votes_for %><b></span>
			<% end %>
		</td>		
			<td width = 5%>
								<% if signed_in? %>
								<% if post.user_id == current_user.id || current_user.admin? %>
								<%= button_to "edit", "/#{post.type.downcase}s/#{post.id}/edit", :method => :get %>
								<%= button_to "delete", post, :method => :delete,
																 :confirm => "You sure",
																 :title => post.content %>
								<% end %>
								<% end %>
				</td>								
		</tr>
</ul>