<header>
  <div id="header">
    <nav class="round">
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <% if user_signed_in? %>
            <li><%= link_to "My Posts", "/users/#{current_user.id}" %></li>
            <li><%= link_to "Edit Profile", edit_user_registration_path(current_user) %></li>
        <% end %>
        <li><%= link_to "Help", help_path %></li>
        <% if user_signed_in? %>
            <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
        <% else %>
            <li><%= link_to "Sign in", new_user_session_path %></li>
        <% end %>
        </ul>
        <% if user_signed_in? && session[:provider] %>
            <ul>
              <li>
              Signed in with <%= service_link(Authentication.where(:id => session[:provider]).first, 32, false) %>
              <%= link_to '(Manage)', authentications_path %>
                </li>
            </ul>
        <% end %>
    </nav>
  </div>
</header>


