<table class="body">
	<tr id="main_app">
	  <td id="main_app">
		<div id="nav_list">	
			<ul id="nav">
				<li><%=link_to "ACC" %>
				  <ul>
					<% @college_acc = College.where("conference = ?", "ACC") %>
				    <% @college_acc.each do |college| %>
				    <li><%= link_to college.name, college %></li>
				    <% end %>
				  </ul>
				</li>
				<li><%=link_to "SEC" %>
				 <ul>
					<% @college_sec = College.where("conference = ?", "SEC") %>
				    <% @college_sec.each do |college| %>
				    <li><%= link_to college.name, college %></li>
				    <% end %>
				  </ul>
				</li>
			</ul>			
		</div>
	  </td>
		<td id="main_app">
   			<div class="container">
      			<section class="round">
        		<% flash.each do |key, value| %>
          			<%= content_tag(:div, value, :class => "flash #{key}") %>
        			<% end %>
        			<%= yield %>
      			</section>
				<%= render 'layouts/footer' %>
      			<%= debug(params) if Rails.env.development? %>
				</td>
			</tr>
    	</div>
	</table>