<%= render 'shared/masthead1' %>

	<h1><%= @college.name %> Redemptions</h1><br>
		
	<%= render 'masthead' %>
		
		<% if signed_in? %>
		<%= link_to "Add a Redemption", new_user_college_redemption_path(@user, @college), :method => :get, :class => "button" %>
		<% else %>
		<%= link_to "Add a Redemption", signin_path, :method => :get, :class => "button" %>
		<% end %><br><br>
			
				<%= form_for @search, :url => college_redemptions_path, :html => {:method => :get} do |f| %>
				  <%= f.label :search %>
				  <%= f.text_field :title_or_post_summary_contains %>
				  <%= f.submit "Go!", :name =>nil %>
				<% end %>
		
		<table class = "post">
		<%= render :partial => "/posts/post", :collection => @redemptions %>
		</table>
		<%= will_paginate(@redemptions)%>
