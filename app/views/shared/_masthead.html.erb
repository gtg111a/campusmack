<% if @main_menu %>
<div class="top_submenu clearfix">
  <ul>
    <% logger.info @main_menu.inspect %>
    <% @main_menu.each do |type, text, link, aclass| %>
      <li class="<%= aclass %>">
        <% if type == :text %>
          <b><%= text.html_safe%></b>
        <% else %>
          <%= link_to(text, link) %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
<% end %>

<% if false %>
    <ul class="masthead">
      <li><%= link_to "Videos", @parent.is_a?(College) ? college_videos_path(@parent) : conference_videos_path(@parent) %></li>
      <li><%= link_to "Photos", @parent.is_a?(College) ? college_photos_path(@parent) : conference_photos_path(@parent) %></li>
      <li><%= link_to "News", @parent.is_a?(College) ? college_news_index_path(@parent) : conference_news_index_path(@parent) %></li>
      <li><%= link_to "Stats", @parent.is_a?(College) ? college_stats_path(@parent) : conference_stats_path(@parent) %></li>
    </ul>
<% end %>

<div class="content_actions">
  <ul>
    <li><%= link_to "Add smack", @parent.is_a?(College) ? new_college_smack_path(@parent) : new_conference_smack_path(@parent) %></li>
    <li><%= link_to 'Add redemption', @parent.is_a?(College) ? new_college_redemption_path(@parent) : new_conference_redemption_path(@parent) %></li>
  </ul>
</div>
