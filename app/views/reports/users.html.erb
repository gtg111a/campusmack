<div class="content new_level with_submenu clearfix">

  <div class="content_actions">
    <ul>
      <li class="dark_button">
        <%= link_to "Export To CSV", export_users_to_csv_url %>
      </li>
    </ul>
  </div>

  <div class="content_title">Number of posts per user</div>

  <div class="content_container">
    <div class="content_category">
      <table id="users_table">
        <tr>
          <th>Username</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>College</th>
          <th>Posts</th>
          <th>Posts Sent as Smack</th>
          <th>People Smacked</th>
        </tr>

        <% @users.each do |u| %>
          <tr>
            <td><%= u.username %></td>
            <td><%= u.first_name %></td>
            <td><%= u.last_name %></td>
            <td><%= u.email %></td>
            <td><%= u.college.name %></td>
            <td><%= u.posts.count %></td>
            <td><%= u.deliveries.count %></td>
            <td><%= u.recipients_count %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  </div>
