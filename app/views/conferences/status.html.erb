<% content_for :head do %>
  <%= stylesheet_link_tag 'statistics' %>
<% end %>

<div class="content standard clearfix">
  <div class="content_title"><h1>Statistics</h1></div>
  <div class="content_container fullstats clearfix">
    <% Conference.all.each do |conference| %>
      <ul class="statistics">
        <%= render :partial => 'statistics', :locals => { :conference => conference, :limit => nil } %>
      </ul>
    <% end %>
  </div>
</div>
