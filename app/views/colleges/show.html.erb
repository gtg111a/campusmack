<div class="content new_level with_submenu">
  <%= render :partial => 'shared/masthead' %>
  <div class="content_title"><%= @college.name %></div>
  <div class="content_stats">
    <%= render 'shared/counts' %>
    <%= render 'shared/search' %>
  </div>

  <div class="content_container">
    <div class="photovideo">
      <div class="category_container">
        <div class="content_category">
          <div class="category_title">
            Videos
          </div>
          <ul class="items">
            <% @videos.each do |post| %>
                <%= render "posts/small_preview", :post => post %>
            <% end %>
          </ul>
          <div class="view_more_link clear_both">
            <%= link_to "See all videos", @parent.is_a?(College) ? college_videos_path(@parent) : conference_videos_path(@parent) %>
          </div>
        </div>
      </div>
      <div class="category_container">
        <div class="content_category">
          <div class="category_title">
            Photos
          </div>
          <ul class="items">
            <% @photos.each do |post| %>
                <%= render "posts/small_preview", :post => post %>
            <% end %>
          </ul>
          <div class="view_more_link clear_both">
            <%= link_to "See all photos", @parent.is_a?(College) ? college_photos_path(@parent) : conference_photos_path(@parent) %>
          </div>
        </div>
      </div>
    </div>

    <div class="news">
      <div class="category_title">
        News
      </div>
      <ul class="items">
        <% @news.each do |post| %>
            <%= render "posts/news_preview", :post => post %>
        <% end %>
      </ul>
      <div class="view_more_link">
        <%= link_to "See all news", @college.is_a?(College) ? college_news_index_path(@college) : conference_news_index_path(@college) %>
      </div>
    </div>
  </div>

</div>
