<div class="comment">
  <div class="content">
    <div class="timestamp">
      Posted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.username %>.
    </div>
    <p><%= comment.comment %></p>
  </div>
  <div class="actions">
    <% if can? :edit, comment %>
        <%= link_to 'Edit', edit_comment_path(comment), :class => 'button' %>
    <% end %>
    <% if can? :destroy, comment %>
        <%= link_to 'Delete', comment, :method => :delete, :confirm => "Delete Comment?", :class => 'button' %>
    <% end %>
  </div>
  <br style="clear:both"/>
</div>