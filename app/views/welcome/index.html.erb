<% content_for :above do %>
    <div class="stat_title">CONFERENCE STATISTICS</div>
    <div id="stats_widget" class="table new_level clearfix">
      <div id="stats_container" class="table_middle">
        <%# FIXME widget shows stats only for I-A now %>
        <%# Conference.where(:division => session[:division]).each do |conference| %>
        <% Conference.where(:division => 'I-A').each do |conference| %>
            <%= render :partial => 'conferences/stats', :locals => {:conference => conference, :limit => 3} %>
        <% end %>
      </div>
    </div>
<% end %>

<% if @sotw %>
    <%= render :partial => 'sotw' %>
<% end %>
